extends ../layout

block content 
  h1 Genre ID #{title}
  h2= genre.name 
  p= genre.description 

  if (genreGames.length)
    p #{genre.name} Games:
    for game in genreGames 
      a(href=game.url)
        button= game.name 

  a(href=`/store/videogames/new?genre=${genre._id}`)
    button Add New #{genre.name} Game

  a(href=`/store/genres/${genre._id}/update`)
    button Update Genre 